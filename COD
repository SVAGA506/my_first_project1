import telebot
import random
otvet = ("Классное фото!!!","Вау ты светишся ярче солца от красоты","Это лучшее что я видел за сегодня")

bot = telebot.TeleBot('7757264633:AAF8m39oYL4_p_ouHS_AkgdHU3WeVM1ArdU')

@bot.message_handler(commands=['money'])
def send_mem(message):
    with open('images/mem1.jpg', 'rb') as f:  
        bot.send_photo(message.chat.id, f)
        bot.reply_to(message,"Помоги автору монетой!")
# Handle '/start' and '/help'       

@bot.message_handler(content_types= ['photo'])
def hendler_photo(message):
    bot.reply_to(message, random.choice(otvet))

@bot.message_handler(commands=['start', 'info'])
def send_welcome(message):
    bot.reply_to(message, """"Привет! Я твой Карманный Будэйко. Я помогу тебе по жизни""")
    

# Handle all other messages with content_type 'text' (content_types defaults to ['text'])
@bot.message_handler(func=lambda message: True)
def echo_message(message):
    bot.reply_to(message, message.text)


bot.infinity_polling()
        
